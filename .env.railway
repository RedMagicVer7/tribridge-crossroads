# Railway Backend Environment Variables
# Copy these variables to Railway dashboard under Variables section

# Application Configuration
NODE_ENV=production
PORT=8000
FRONTEND_URL=https://your-vercel-frontend.vercel.app
RAILWAY_ENVIRONMENT=true

# Database Configuration (Railway will auto-generate DATABASE_URL)
# DATABASE_URL will be automatically provided by Railway PostgreSQL plugin
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Redis Configuration (Railway will auto-generate if Redis plugin added)
# REDIS_URL will be automatically provided by Railway Redis plugin
REDIS_URL=${{Redis.REDIS_URL}}

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-here-change-this

# KYC Service Configuration
SUMSUB_APP_TOKEN=your-sumsub-app-token
SUMSUB_SECRET_KEY=your-sumsub-secret-key
ONFIDO_API_TOKEN=your-onfido-api-token

# Blockchain Configuration
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_project_id
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
TRON_RPC_URL=https://api.trongrid.io
BSC_RPC_URL=https://bsc-dataseed.binance.org

# Private Key for blockchain operations (KEEP SECURE!)
PRIVATE_KEY=your-private-key-here

# Smart Contract Addresses
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
RUSSIA_ESCROW_CONTRACT=0x1234567890123456789012345678901234567890

# Russia OTC Configuration
RUSSIA_OTC_API_KEY=your-russia-otc-api-key
SBERBANK_API_KEY=your-sberbank-api-key
VTB_API_KEY=your-vtb-api-key
YOOMONEY_API_KEY=your-yoomoney-api-key

# Logistics API Configuration
LOGISTICS_API_KEY=your-logistics-api-key
DHL_API_KEY=your-dhl-api-key
FEDEX_API_KEY=your-fedex-api-key
UPS_API_KEY=your-ups-api-key

# Compliance API Configuration
COMPLIANCE_API_KEY=your-compliance-api-key
OFAC_API_KEY=your-ofac-api-key

# Email Service (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password