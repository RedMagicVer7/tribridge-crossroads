# Production Environment Variables for TriBridge Deployment

# Server Configuration
# 注意：Vite项目不应该在.env文件中设置NODE_ENV=production
# NODE_ENV=production
PORT=8000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://tribridge:your_password@localhost:5432/tribridge
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tribridge
DB_USER=tribridge
DB_PASSWORD=your_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-here-min-32-chars
JWT_EXPIRES_IN=7d

# KYC/AML Service Configuration
SUMSUB_APP_TOKEN=your_sumsub_app_token_here
SUMSUB_SECRET_KEY=your_sumsub_secret_key_here
ONFIDO_API_TOKEN=your_onfido_api_token_here
ONFIDO_WEBHOOK_TOKEN=your_onfido_webhook_token_here

# Blockchain Configuration
# Ethereum
ETH_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
ETH_TESTNET_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id
ETH_PRIVATE_KEY=your_ethereum_private_key_here

# TRON
TRON_RPC_URL=https://api.trongrid.io
TRON_TESTNET_RPC_URL=https://api.nileex.io
TRON_PRIVATE_KEY=your_tron_private_key_here

# BSC (Binance Smart Chain)
BSC_RPC_URL=https://bsc-dataseed1.binance.org
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
BSC_PRIVATE_KEY=your_bsc_private_key_here

# Third-party APIs
COINGECKO_API_KEY=your_coingecko_api_key_here
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/tribridge.log

# CORS Configuration
CORS_ORIGIN=https://tribridge.pages.dev,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Monitoring
HEALTH_CHECK_INTERVAL=30000